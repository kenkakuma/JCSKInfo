# 网站配置
NEXT_PUBLIC_SITE_URL=https://jcski.com

# Google Analytics 4 (GA4)
# 获取方式：https://analytics.google.com/ → 管理 → 数据流 → 衡量ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google AdSense
# 获取方式：https://www.google.com/adsense/ → 账号 → 网站 → 您的发布商ID
NEXT_PUBLIC_ADSENSE_ID=ca-pub-XXXXXXXXXXXXXXXX

# 联盟营销ID
NEXT_PUBLIC_SHOPEE_AFFILIATE_ID=your_shopee_id
NEXT_PUBLIC_AMAZON_AFFILIATE_ID=your_amazon_tag

# 后台管理系统配置
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123
JWT_SECRET=your-jwt-secret-key-change-in-production

# Cloudinary 图片管理
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# 自动翻译服务（可选，三选一）
# Google Translate API (推荐 - 性价比高)
# 获取方式：https://console.cloud.google.com/ → APIs & Services → Credentials
GOOGLE_TRANSLATE_API_KEY=

# DeepL API (质量最佳)
# 获取方式：https://www.deepl.com/pro-api
DEEPL_API_KEY=

# OpenAI API (最灵活自然)
# 获取方式：https://platform.openai.com/api-keys
OPENAI_API_KEY=
